%h2 Details about your #{@exercise.muscle} muscle exercise

%ul#details
  %li
    User Name:
    =@exercise.name
  %li
    Muscle Name:
    = @exercise.muscle
  %li
    Muscle Exercise:
    = @exercise.description

= link_to '<button type="button">Edit</button>'.html_safe, edit_exercise_path(@exercise)
= button_to 'Delete', exercise_path(@exercise), :method => :delete, :confirm => 'Are you sure?'
= link_to '<button type="button">Back</button>'.html_safe, exercises_path